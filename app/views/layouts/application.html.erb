<!DOCTYPE HTML>
<html>
<head>
    <title>Oil5K - Buddy for your auto service</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">   
    <meta name="description" content="Buddy for your auto service ">
    <meta name="author" content="harkable.com"> 
   
  	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
  	<script>window.jQuery || document.write('<script src="assets/js/jquery-1.7.2.min.js"><\/script>')</script>
 
  <title>Oil5k</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <script src="https://apis.google.com/js/client:platform.js" async defer></script>


  
  <!-- IE Fix for HTML5 Tags -->
  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->      

  <%= csrf_meta_tags %>
</head>
 

<body>
	   
  <!-- Navbar -->
  <header>
	<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
    		<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
          	</a>
          	
          	<%= link_to "Oil-5K",root_path,class: "brand scroller" %>
		  	<div class="nav-collapse collapse">
		  		
                <ul class="nav pull-right">
                	<!--
                  	<li><a href="#" class="toggle_video">Toggle Video Demo</a></li>
                -->
                
                <% if current_user.nil? %>
                    <li>   <%= link_to "Signin/Register" ,new_user_session_path%></li>
                    <% else %>
                       <div class="btn-group">
      <a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#">
       <%= current_user.email%>
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
       <li><%=link_to "Logout" ,destroy_user_session_path,:method => :delete %></li>
                    <li><%=link_to "Manage Account" ,user_path(current_user.id) %></li>
                     <li><%=link_to "Add/Manage Cars" ,user_path(current_user.id) %></li>
                     <li><%=link_to "Add/Manage Services" ,addservice_path(current_user.id) %></li>
                     <li><%=link_to "Add/Manage Reminders" ,addreminder_path(current_user.id) %></li>
      </ul>
    </div>
                    
                    	<% end %>
                    	
                    <li><%= link_to "Subscribe For Coupons",new_subscription_path ,:id=> "#team"%></li>
                 
                   
                </ul>
                 
	        </div>
        </div>
      </div>
    </div>
   </header>
    <!-- end Navbar -->
    
   
     
     

    
<%= yield %>

                     
 <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                   <ul class="list-inline">
                        <li>
                             <%= link_to "Home",root_path %>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <%= link_to "About",root_path %>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <a href="#services">Services</a>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <%= link_to "Contact" ,new_contact_path%>
                        </li>
                    </ul>
                    <p class="copyright text-muted small">Copyright &copy; Trueoil 2015. All Rights Reserved</p>
                </div>
            </div>
        </div>
    </footer>
<script>
jQuery(function($){
	$("select#selectstate").change(function() {
		
		var state = $('select#selectstate :selected').val();
		
		 if(state == "") state="0";
          
		jQuery.get('dealers/update_city_select/'+ state, function(data){
			
			$("select#selectcities").html(data);
			
		})
		return false;
	})
});



	
</script>


</body>
</html>
