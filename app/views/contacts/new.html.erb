      <!-- #contact -->   	
	<section class="slice">     
    <div class="block">
        <div class="container">        
            <div class="row">            
                <div class="span10">               
                    <div class="clear-form mailing">    
		<h1>Get in contact with us</h1>	
	
				
			<%= form_for(@contact) do |f| %>
				  <div class="control-group">
				    <label class="control-label" for="inputName">Name</label>
				    <div class="controls">
				    	 <%= f.text_field :name,:class=>"span4",:id=>"inputName",:placeholder=>"Name" %>
				      
				    </div>
				  </div>
				  <div class="control-group">
				    <label class="control-label" for="inputEmail">Email</label>
				    <div class="controls">
				       <%= f.text_field :email,:class=>"span4",:id=>"inputEmail",:placeholder=>"Email" %>
				    </div>
				  </div>
				   <div class="control-group">
				    <label class="control-label" for="inputEmail">Zip</label>
				    <div class="controls">
				      <%= f.text_field :zip,:class=>"span4",:id=>"inputZip",:placeholder=>"Zip" %>
				    </div>
				  </div>
				  <div class="control-group">
				    <label class="control-label" for="inputContact">Message</label>
				    <div class="controls">
				    <%= f.text_area :description, size: "10x12",:class=> "span4" %>
				    </div>
				  </div>
				  <div class="control-group">
				    <div class="controls">
				      <button type="submit" class="btn btn-large btn-purple">Contact Us</button>
				    </div>
				  </div>
			<% end %>
	       </div>
                
            </div>
        </div>
    </div>
    </div>
</section> 